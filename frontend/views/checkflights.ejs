<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="./../assets/css/index.css">
    <!-- <link rel='stylesheet' href='/frontend/assets/css/checkfly.css'> -->
</head>

<body>
    <%- include ('./header.ejs') %>
        
    
<div class="container">
    <div class="row justify-content-end">

        <button class="btn btn-primary col-2 col-lg-1  m-3" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasLogin" aria-controls="offcanvasRight">Login</button>
        <button class="btn btn-primary col-2 col-lg-1 m-3" type="button" data-bs-toggle="offcanvas"
            data-bs-target="#offcanvasRegister" aria-controls="offcanvasRight">Register</button>
    </div>

</div>

<div class="container">
    <div class="row justify-content-between">
        <div class="col-8 m-1"><%- include ('./pogoda.ejs') %></div>
    
    </div>
</div>



<div class="container mt-2 col-12">
    <p class="display-6 text-light" text-light><%= isAvailable %></p>
  
     <table class="table col-12 text-light m-1">
        <thead>
            <tr>
            <th scope="col">Flight's code</th>
            <th scope="col">Destination</th>
            <th scope="col">Date</th>
            <th scope="col">Price</th>
            <th scope="col">Empty seats</th>
            </tr>
        </thead>
        <tbody>
            <%data.forEach(flights => {%>
            <tr>
                <th scope="row" ><%= flights.code %></th>
                <td><%= flights.destination %></td>
                <td><%= flights.date %></td>
                <td><%= flights.price%>pln</td>
                <td><%= flights.emptySeats%></td>
                
                <td> <button class="btn btn-primary" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">
                    Choose the seat, book your flight, and fly...
                </button>
                </td>  
            </tr>
            <%})%>
        
        </tbody>

    </table>
</div>





<div class="collapse container" id="collapseExample">
    <div class="card card-body col-4 col-md-6 col-sm-12">
      you have to be logged
      <%- include ('./login.ejs') %>
    </div>
  </div>


<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasLogin" aria-labelledby="offcanvasInput">
    <div class="offcanvas-header">
        <h5 id="offcanvasLogin">Please, log in</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <%- include ('./login.ejs') %>
    </div>
</div>

<div class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasRegister" aria-labelledby=" offcanvasRegister">
    <div class="offcanvas-header">
        <h5 id="offcanvasRegister">You have to be registered</h5>
        <button type="button" class="btn-close text-reset" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body">
        <%- include ('./register.ejs') %>
    </div>
</div>



<footer>    <%- include('footer'); -%></footer>
<script src="./../js/checkflight.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
</script>

</body> 

</html>

